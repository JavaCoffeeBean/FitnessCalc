<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/mainActivityLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_list">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <Button
                android:id="@+id/BMI_Button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:text="BMI"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/calculate_button_bg"
                android:backgroundTint="@color/lightPurple"/>

            <Button
                android:id="@+id/CALORIE_Button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:text="Calorie"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/calculate_button_bg"
                android:backgroundTint="@color/lightPurple"/>

            <Button
                android:id="@+id/BODYFAT_Button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="sans-serif-light"
                android:text="Body Fat"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/calculate_button_bg"
                android:backgroundTint="@color/lightPurple"/>

            <Button
                android:id="@+id/BMR_Button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:fontFamily="sans-serif-light"
                android:text="BMR"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/calculate_button_bg"
                android:backgroundTint="@color/lightPurple"/>

            <Button
                android:id="@+id/IDEALWEIGHT_Button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:text="Ideal Weight"
                android:fontFamily="sans-serif-light"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@drawable/calculate_button_bg"
                android:backgroundTint="@color/lightPurple"/>



        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>